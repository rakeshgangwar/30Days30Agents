# Data Analysis Agent - Environment Variables

# OpenRouter API Key for LLM access
# Sign up at https://openrouter.ai to get your API key
OPENROUTER_API_KEY="your_openrouter_api_key_here"

# Optional: Database connection string (if not using SQLite)
# DATABASE_URL="postgresql://user:password@localhost:5432/database"

# Optional: Ollama API URL (for local LLM)
# OLLAMA_API_URL="http://localhost:11434"

# LLM Settings
DEFAULT_LLM_MODEL="anthropic/claude-3.7-sonnet"
DEFAULT_TEMPERATURE=0.2
DEFAULT_MAX_TOKENS=1024
DEFAULT_REQUEST_TIMEOUT=60
DEFAULT_MAX_RETRIES=3

# Agent Settings
AGENT_MAX_ITERATIONS=50
AGENT_MAX_EXECUTION_TIME=120
AGENT_EARLY_STOPPING_METHOD="force"
AGENT_ALLOW_DANGEROUS_CODE=true

# Database Settings
DEFAULT_SQLITE_PATH="test_data.db"
DEFAULT_DB_TYPE="sqlite"

# Application Settings
APP_TITLE="Data Analysis Agent"
