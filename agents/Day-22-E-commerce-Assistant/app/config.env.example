# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration (SQLite by default)
DATABASE_URL=sqlite:///./shopping_assistant.db

# Optional: PostgreSQL configuration
# DATABASE_URL=postgresql://username:password@localhost/shopping_assistant

# Web API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Scraping Configuration (optional)
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36
REQUEST_DELAY=1.0

# Price Tracking Configuration
PRICE_CHECK_INTERVAL=3600  # 1 hour in seconds
MAX_TRACK_ITEMS_PER_USER=100

# Development Settings
DEBUG=false
LOG_LEVEL=INFO 