# Application Settings
APP_NAME=Digi-Persona
APP_ENV=development
DEBUG=True
SECRET_KEY=your-secret-key-here
API_PREFIX=/api/v1

# Database Settings
DATABASE_URL=postgresql://postgres:postgres@db:5432/digi_persona
DATABASE_TEST_URL=postgresql://postgres:postgres@db:5432/digi_persona_test

# Redis Settings
REDIS_URL=redis://redis:6379/0

# OpenAI Settings
OPENAI_API_KEY=your-openai-api-key

# Twitter API Settings
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_SECRET=your-twitter-access-secret

# LinkedIn API Settings
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# Bluesky API Settings
BLUESKY_IDENTIFIER=your-bluesky-identifier
BLUESKY_PASSWORD=your-bluesky-password

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Monitoring Settings
ENABLE_METRICS=True
METRICS_PORT=9090
